<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.idoqo.pangolin.ProfileActivity"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/pangolin"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/profile_picture"
        android:padding="16dp"
        >
        <ImageButton
            android:id="@+id/button_github"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_github"
            android:contentDescription="@string/action_github_link"
            android:tint="@color/colorRed"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button_twitter"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_twitter"
            android:contentDescription="@string/action_twitter_link"
            android:tint="@color/colorBlue"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button_slack"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_slack"
            android:contentDescription="@string/action_slack_link"
            android:tint="@color/colorYellow"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button_bio"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_user"
            android:contentDescription="@string/action_slack_link"
            android:tint="@color/colorGreen"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button_mail"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_mail_outline_white_24dp"
            android:contentDescription="@string/action_email_address"
            android:tint="@color/colorCyan"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</RelativeLayout>
